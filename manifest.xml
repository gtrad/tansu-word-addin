<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="TaskPaneApp">

  <!-- Basic Add-in Information -->
  <Id>77504810-b6b0-4d56-8d75-18a0ff2d3638</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Tansu</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Tansu Variables"/>
  <Description DefaultValue="Insert tracked variables into your Word document. Sync values like prices, dates, and measurements across all your files. Requires companion Tansu desktop app."/>

  <!-- Icon URLs - hosted on GitHub Pages -->
  <IconUrl DefaultValue="https://gtrad.github.io/tansu-word-addin/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://gtrad.github.io/tansu-word-addin/assets/icon-64.png"/>

  <!-- Support URL -->
  <SupportUrl DefaultValue="https://www.tansu.co/support"/>

  <!-- AppDomains for localhost communication -->
  <AppDomains>
    <AppDomain>https://127.0.0.1:5050</AppDomain>
    <AppDomain>https://localhost:5050</AppDomain>
    <AppDomain>http://127.0.0.1:5050</AppDomain>
    <AppDomain>http://localhost:5050</AppDomain>
  </AppDomains>

  <!-- Host applications -->
  <Hosts>
    <Host Name="Document"/>
  </Hosts>

  <!-- Requirements -->
  <Requirements>
    <Sets>
      <Set Name="WordApi" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <!-- Default settings - hosted on GitHub Pages -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://gtrad.github.io/tansu-word-addin/taskpane.html"/>
  </DefaultSettings>

  <!-- Permissions -->
  <Permissions>ReadWriteDocument</Permissions>

</OfficeApp>
